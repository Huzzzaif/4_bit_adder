public class HalfAdder {
    private boolean inputA;
    private boolean inputB;
    private boolean sum;
    private boolean carry;

    public HalfAdder(boolean inputA, boolean inputB) {
        this.inputA = inputA;
        this.inputB = inputB;
        calculate();
    }

    private void calculate() {
        sum = inputA ^ inputB; // XOR for sum
        carry = inputA && inputB; // AND for carry
    }

    public boolean getSum() {
        return sum;
    }

    public boolean getCarry() {
        return carry;
    }

    public static void main(String[] args) {
        boolean a = true;
        boolean b = false;

        HalfAdder halfAdder = new HalfAdder(a, b);
        System.out.println("Input A: " + a);
        System.out.println("Input B: " + b);
        System.out.println("Sum: " + halfAdder.getSum());
        System.out.println("Carry: " + halfAdder.getCarry());
    }
}
